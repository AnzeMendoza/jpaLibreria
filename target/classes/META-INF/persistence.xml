<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="Libreria">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>entity.Libro</class>
        <class>entity.Editorial</class>
        <class>entity.Autor</class>
        <properties>
            <property name="javax.persistence.cj.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="secret" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:33060/libreria"/>
<!--            <property name="javax.persistence.schema-generation.database.action" value="create"/>-->

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
